{
  "name": "session-recap-extension",
  "displayName": "Session Recap",
  "description": "Provides an AI-generated summary of your previous coding session to help you resume work efficiently",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "sessionRecap",
          "name": "Session Recap",
          "when": "true"
        },
        {
          "id": "teamDashboard",
          "name": "Team Dashboard",
          "when": "config.sessionRecap.enableTeamDashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "sessionRecap.refresh",
        "title": "Refresh Session Recap",
        "icon": "$(refresh)"
      },
      {
        "command": "sessionRecap.clear",
        "title": "Clear Session Data",
        "icon": "$(clear-all)"
      },
      {
        "command": "sessionRecap.refreshTeam",
        "title": "Refresh Team Dashboard",
        "icon": "$(refresh)"
      },
      {
        "command": "sessionRecap.optInTeam",
        "title": "Opt In to Team Sharing",
        "icon": "$(account)"
      },
      {
        "command": "sessionRecap.optOutTeam",
        "title": "Opt Out of Team Sharing",
        "icon": "$(account)"
      },
      {
        "command": "sessionRecap.showLogs",
        "title": "Show Session Recap Logs",
        "icon": "$(output)"
      },
      {
        "command": "sessionRecap.showTelemetry",
        "title": "Show Telemetry Summary",
        "icon": "$(graph)"
      },
      {
        "command": "sessionRecap.setLogLevel",
        "title": "Set Log Level",
        "icon": "$(settings-gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sessionRecap.refresh",
          "when": "view == sessionRecap",
          "group": "navigation"
        },
        {
          "command": "sessionRecap.showLogs",
          "when": "view == sessionRecap",
          "group": "navigation"
        },
        {
          "command": "sessionRecap.refreshTeam",
          "when": "view == teamDashboard",
          "group": "navigation"
        },
        {
          "command": "sessionRecap.optInTeam",
          "when": "view == teamDashboard && !config.sessionRecap.privacySettings.shareWithTeam",
          "group": "navigation"
        },
        {
          "command": "sessionRecap.optOutTeam",
          "when": "view == teamDashboard && config.sessionRecap.privacySettings.shareWithTeam",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Session Recap",
      "properties": {
        "sessionRecap.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable session recap tracking"
        },
        "sessionRecap.maxCommitsToShow": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of Git commits to display"
        },
        "sessionRecap.enableAISummary": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-generated summaries"
        },
        "sessionRecap.aiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "local",
            "disabled"
          ],
          "default": "disabled",
          "description": "AI provider for generating summaries"
        },
        "sessionRecap.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for generating summaries"
        },
        "sessionRecap.aiMaxTokens": {
          "type": "number",
          "default": 150,
          "description": "Maximum tokens for AI summary generation"
        },
        "sessionRecap.aiTemperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature setting for AI creativity (0-2)"
        },
        "sessionRecap.enableTeamDashboard": {
          "type": "boolean",
          "default": false,
          "description": "Enable team dashboard functionality"
        },
        "sessionRecap.privacySettings.shareWithTeam": {
          "type": "boolean",
          "default": false,
          "description": "Share session data with team"
        },
        "sessionRecap.privacySettings.excludeFilePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*.log",
            "node_modules/**",
            ".git/**"
          ],
          "description": "File patterns to exclude from tracking"
        },
        "sessionRecap.privacySettings.excludeCommitPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "WIP:",
            "temp:",
            "debug:"
          ],
          "description": "Commit message patterns to exclude from tracking"
        },
        "sessionRecap.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn", 
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Logging level for the extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  }
}
